<UserControl x:Class="FEMmini.CanvasInteraction"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FEMmini"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <TabControl>
        <TabItem x:Name="inputControl">
            <TabItem.Header>
                <TextBlock Margin="3">Input</TextBlock>
            </TabItem.Header>
            <TabItem.Content>
                <local:InputInfo Margin="10" />
            </TabItem.Content>
        </TabItem>
        <TabItem Header="Analysis">
            <TabItem.Content>
                <local:AnalysisMode Margin="10" />
            </TabItem.Content>
        </TabItem>
        <TabItem Header="Model">
            <TabItem.Content>
                <local:VisualMode Margin="10" />
            </TabItem.Content>
        </TabItem>
        <!--<TabItem Header="Info">
            <TabItem.Content>
                <local:ResultInfo Margin="10" />
            </TabItem.Content>
        </TabItem>-->
        <!--<TabItem Header="SoilState">
            <TabItem.Content>
                <local:SoilsPlot Margin="10" />
            </TabItem.Content>
        </TabItem>-->
    </TabControl>
</UserControl>
